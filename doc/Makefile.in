@SET_MAKE@
ROOT=		@abs_top_builddir@
top_builddir=	@top_builddir@

# File extensions

C=		.c
O=		.o
H=		.h
A=		.a
LP=		lib

CLEAN=		*.bak *~ *.BAK *.swp *.tmp core *.core a.out
XCLEAN=

# Compilers, programs

CC=		@CC@
AR=		@AR@
RANLIB= 	@RANLIB@
RM=		@RM@
RMFLAGS=	-f
RMDFLAGS=	-rf

# Common flags

ARFLAGS=	rcv
XFLAGS=
COPT=		@CFLAGS@
CWARN=		@CWARN@
CDEBUG= 	@CDEBUG@
LDEBUG= 	@LDEBUG@
CINCLUDE=	-I$(D_INC) -I. @CINCLUDE@
CEXTRA= 	@DEFS@
CFLAGS= 	$(CDEBUG) $(COPT) $(CWARN) $(CINCLUDE) $(CEXTRA) $(XFLAGS)
CNFLAGS=	$(CDEBUG) $(CWARN) $(CINCLUDE) $(CEXTRA) $(XFLAGS)
YFLAGS= 	-d
LDFLAGS=	$(LDEBUG) @LDFLAGS@
LXFLAGS=	$(LDLIBS) @LIBS@ @LIBMALLOC@

RMFLAGS=	-f

# Directories

D_BIN=		$(ROOT)/bin@TOOLCHAINEXT@
D_INC=		$(ROOT)/include
D_OBJ=		$(ROOT)/objects@TOOLCHAINEXT@/compat
D_LIB=		$(ROOT)/lib@TOOLCHAINEXT@
XFLAGS=

############################################################

all:			installman
installman:
		@echo publishing manpages ...
		-cp pi.man $(D_BIN)
		-cp px.man $(D_BIN)
		-cp pdx.man $(D_BIN)
		-cp pmerge.man $(D_BIN)

clean:
		-@$(RM) $(RMFLAGS) $(D_BIN)/*.man >/dev/null 2>&1
		
#end

