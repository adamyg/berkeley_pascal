@SET_MAKE@
ROOT=		@abs_top_builddir@
top_builddir=	@top_builddir@

# File extensions

C=		.c
O=		.o
E=
H=		.h
A=		.a
LP=		lib

CLEAN=		*.bak *~ *.BAK *.swp *.tmp core *.core a.out
XCLEAN=

# Compilers, programs

CC=		@CC@
AR=		@AR@
RANLIB=		@RANLIB@
RM=		@RM@
LIBTOOL=	@LIBTOOL@

# Configuration

ifeq ("$(BUILD_TYPE)","")	#default
BUILD_TYPE=	debug
MAKEFLAGS+=	BUILD_TYPE=debug
endif
ifneq ("$(BUILD_TYPE)","release")
RTSUFFIX=d
endif

# Directories

D_INC=		$(ROOT)/include
D_BIN=		$(ROOT)/bin@TOOLCHAINEXT@/$(BUILD_TYPE)
D_OBJ=		$(ROOT)/objects@TOOLCHAINEXT@/$(BUILD_TYPE)/libcompat
D_LIB=		$(ROOT)/lib@TOOLCHAINEXT@/$(BUILD_TYPE)

# Common flags

XFLAGS=
CFLAGS=		@CFLAGS@
CWARN=		@CWARN@
ifeq (gcc,$(findstring gcc,$(CC)))
CWARN+=		-Wno-sign-compare
CWARN+=		-Wno-unused-result -Wno-unused-parameter
CWARN+=		-Wno-dangling-else
endif
CDEBUG=		@CDEBUG@
CRELEASE=	@CRELEASE@
LDDEBUG=	@LDDEBUG@
LDRELEASE=	@LDRELEASE@

CINCLUDE=	-I$(D_INC) -I. @CINCLUDE@

CEXTRA=		@DEFS@
ifeq ("$(BUILD_TYPE)","release")
CFLAGS+=	$(CRELEASE) $(CWARN) $(CINCLUDE) $(CEXTRA) $(XFLAGS)
LDFLAGS=	$(LDRELEASE) @LDFLAGS@
else
CFLAGS+=	$(CDEBUG) $(CWARN) $(CINCLUDE) $(CEXTRA) $(XFLAGS)
LDFLAGS=	$(LDDEBUG) @LDFLAGS@
endif
LDLIBS=		-L$(D_LIB) @LIBS@ @EXTRALIBS@

ARFLAGS=	rcv
RMFLAGS=	-f
RMDFLAGS=	-rf


#########################################################################################
# Targets

LIBROOT=	compat

LIBCSOURCES=\
		asprintf.c		\
		basename.c		\
		bzero.c			\
		dirname.c		\
		explicit_bzero.c	\
		getline.c		\
		getw.c			\
		index.c			\
		memmem.c		\
		mktemp.c		\
		putw.c			\
		reallocarray.c		\
		recallocarray.c		\
		rindex.c		\
		strcasecmp.c		\
		strcatn.c		\
		strlcat.c		\
		strlcpy.c		\
		strncasecmp.c		\
		strndup.c		\
		strnlen.c		\
		strsep.c		\
		strtok_r.c		\
		strtonum.c		\
		timegm.c		\
		vasprintf.c

CFLAGS+=	-DLIBCOMPAT_SOURCE=1

LIBOBJS=	$(addprefix $(D_OBJ)/,$(subst .c,$(O),$(LIBCSOURCES)))

LIBRARY=	$(D_LIB)/$(LP)$(LIBROOT)$(A)

BINARIES=	\
	$(D_BIN)/dirname$(E)	\
	$(D_BIN)/basename$(E)


#########################################################################################
# Rules

.PHONY:			build release debug
build:			directories $(LIBRARY) $(BINARIES) installinc

release:
		$(MAKE) BUILD_TYPE=release $(filter-out release, $(MAKECMDGOALS))
debug:
		$(MAKE) BUILD_TYPE=debug $(filter-out debug, $(MAKECMDGOALS))

$(LIBRARY):		$(LIBOBJS)
		$(RM) $(RMFLAGS) $@
		$(AR) $(ARFLAGS) $@ $(LIBOBJS)
		$(RANLIB) $@

$(D_BIN)/dirname$(E):	MAPFILE=$(basename $@).map
$(D_BIN)/dirname$(E):	LINKLIBS=lcompat
$(D_BIN)/dirname$(E):	$(D_OBJ)/dirname_main$(O)
		$(LIBTOOL) --mode=link $(CC) $(LDFLAGS) $^ -o $@ $(LDLIBS) @LDMAPFILE@

$(D_BIN)/basename$(E):	MAPFILE=$(basename $@).map
$(D_BIN)/basename$(E):	LINKLIBS=lcompat
$(D_BIN)/basename$(E):	$(D_OBJ)/basename_main$(O)
		$(LIBTOOL) --mode=link $(CC) $(LDFLAGS) $^ -o $@ $(LDLIBS) @LDMAPFILE@

.PHONY:		installinc
installinc:		../include/.created
		@echo publishing headers ...
		-cp libcompat.h ../include
		-cp a_out.h ../include

directories:	$(D_OBJ)/.created

%/.created:
		-@mkdir $(@D)
		@echo "do not delete, make managed content" > $@

clean:
		@echo $(BUILD_TYPE) clean
		-@$(RM) $(RMFLAGS) $(BAK) $(LIBRARY) $(LIBOBJS) $(CLEAN) $(XCLEAN) >/dev/null 2>&1
		-@$(RM) $(RMFLAGS) ../include/a_out.h >/dev/null 2>&1

$(D_OBJ)/%$(O):		%$(C)
		$(CC) $(CFLAGS) -o $@ -c $<

$(D_OBJ)/%_main$(O):	%$(C)
		$(CC) $(CFLAGS) -DMAIN=1 -o $@ -c $<

#end

